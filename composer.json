        {
            "name": "blu3gui7ar",
            "email": "blu3gui7ar@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url":  "https://g.pupugao.com/hwang/esmeralda.git"
        }
    ],
